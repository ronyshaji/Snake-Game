{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/main.cpp",             // Compile main.cpp
                "${fileDirname}/renderer.cpp",         // Include Renderer.cpp
                "${fileDirname}/game.cpp",
                "${fileDirname}/controller.cpp",
                "${fileDirname}/snake.cpp",
                "${fileDirname}/speedcontrol.cpp",
                "-o",
                "${fileDirname}/../build/SnakeGame",
                "-I/usr/include/SDL2",
                "-L/usr/lib",  
                "-lSDL2"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}